<Page x:Class="diplom.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Label Name="LabelQuestion"/>
        <Button Name="Button1" FontSize="26" VerticalContentAlignment="Top" Grid.Row="0" Margin="10" Content="Список тестов"          Click="GoToTestsList"/>
        <Button Name="Button2" FontSize="26" VerticalContentAlignment="Top" Grid.Row="1" Margin="10" Content="Результаты тестов"      Click="GoToResults"/>
        <Button Name="Button3" FontSize="26" VerticalContentAlignment="Top" Grid.Row="2" Margin="10" Content="Создать тест"           Click="CreateTest"/>
        <Button Name="Button4" FontSize="26" VerticalContentAlignment="Top" Grid.Row="3" Margin="10" Content="Просмотреть назначения" Click="GoToPrescriptions"/>

    </Grid>
</Page>
