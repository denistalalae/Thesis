<Page x:Class="diplom.Pages.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label       Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center" Content="Логин"/>
        <Label       Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Center" Content="Пароль"/>
        <TextBox     Grid.Column="1" Grid.Row="2" FontSize="22" Name="LoginTB"/>
        <PasswordBox Grid.Column="1" Grid.Row="4" FontSize="22" Name="PasswordTB"/>
        <Button      Grid.Column="1" Grid.Row="6" Content="Войти" Click="LogIn"/>
    </Grid>
</Page>
